{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__BROWSER__": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    // Strict modecs
    "strict": [2, "never"],

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],
    "curly": [2, "multi"],
    "semi": [2, "never"],
    "no-multi-spaces": 0
  }
}
